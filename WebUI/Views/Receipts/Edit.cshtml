@model WebUI.Models.ReceiptEditViewModel

@{
    ViewBag.Title = "Edit" + @Model.Receipt.Description;
    Layout = "~/Views/Shared/_LandlordLayout.cshtml";
}

<div class="page-header">
    <h2>Edit Receipt @Model.Receipt.Description</h2>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Edit Receipt</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Receipts", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-xs-6 col-sm-4">
                    @Html.LabelFor(x => x.Receipt.Description)
                </div>
                <div class="col-xs-6 col-sm-4">
                    @Html.LabelFor(x => x.Receipt.PurchaseDate)
                </div>
                <div class="col-xs-6 col-sm-4">
                    @*@Html.LabelFor(x => x.Receipt.Vendor_Id)*@  //todo need to get receiptBo back as viewmodel
                    @Html.Label("Vendor")
                </div>
            </div>
            <div class="row">
                @Html.HiddenFor(x => x.Receipt.Id);
                <div class="col-xs-6 col-sm-4">
                    @Html.TextBoxFor(x => x.Receipt.Description, new { @class = "form-control input-sm" })
                </div>
                <div class="col-xs-6 col-sm-4">
                    @Html.TextBoxFor(x => x.Receipt.PurchaseDate, new { @class = "form-control input-sm" })
                </div>
                <div class="col-xs-6 col-sm-4">
                    @Html.TextBoxFor(x => x.Receipt.Vendor_Id, new { @class = "form-control input-sm" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-6 col-sm-4">
                    @Html.LabelFor(x => x.Receipt.Price)
                </div>
                <div class="col-xs-6 col-sm-4">
                    @Html.LabelFor(x => x.Receipt.GstRate)
                </div>
                <div class="col-xs-6 col-sm-4">
                    @Html.LabelFor(x => x.Receipt.AccountType_Id)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-sm-4">
                    @Html.TextBoxFor(x => x.Receipt.Price, new { @class = "form-control input-sm" })
                </div>
                <div class="col-xs-6 col-sm-4">
                    @Html.TextBoxFor(x => x.Receipt.GstRate, new { @class = "form-control input-sm" })
                </div>
                <div class="col-xs-6 col-sm-4">
                    @Html.DropDownListFor(x => x.Receipt.AccountType_Id, Model.AccountTypeSelectList, string.Empty, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-6 col-sm-4">
                    @Html.LabelFor(x => x.Receipt.IsBulk)
                    @Html.CheckBoxFor(x => x.Receipt.IsBulk)
                </div>
                <div class="col-xs-6 col-sm-4">
                    @Html.LabelFor(x => x.Receipt.Currency_Id)
                    @Html.DropDownListFor(x => x.Receipt.Currency_Id, Model.CurrencySelectList, string.Empty, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-6 col-sm-4">
                    @Html.Label("Image")

                    @if (@Model.Receipt.ReceiptImages.Count > 0)
                    {
                        foreach (var imageFile in @Model.Receipt.ReceiptImages)
                        {
                            <img width="100%" height="100%" class="img-rounded" src="@Url.Action("GetImage", "Receipts", new { imageId = imageFile.Id })" />
                        }
                    }
                    else
                    {
                        @:None
                    }
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-6 col-sm-4">
                    @Html.Label("Upload new receipt image")
                    <input type="file" name="Image" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-6 col-sm-4">
                    @Html.LabelFor(x => x.Receipt.Note)
                    @Html.TextBoxFor(x => x.Receipt.Note, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-sm-4">
                    <input type="submit" value="Save" />
                    @Html.ActionLink("Cancel and return to List", "Index")
                </div>
            </div>
        }
    </div>
</div>

@section Contents{}
@section Scripts {
    <script src="/Scripts/LMate/Receipts_Edit.js"></script>
}
@section DocumentReady
{
    @*GetImages();*@
}
