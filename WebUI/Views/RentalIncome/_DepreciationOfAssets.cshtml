@model List<LMate.BusinessObjects.DepreciationAsset>

<div>

    @for (int i = 0; i < Model.Count(); i++)
    {
        <table>
            <tr>
                <td>@Html.LabelFor(x => x[i].Receipt.Description)</td>
                <td>@Html.TextBoxFor(x => x[i].Receipt.Description)</td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(x => x[i].Receipt.PurchaseDate)
                </td>
                <td>
                    @Html.TextBoxFor(x => x[i].Receipt.PurchaseDate)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(x => x[i].Receipt.Cost)
                </td>
                <td>
                    <span class="dollarSign">$</span>
                    @Html.TextBoxFor(x => x[i].Receipt.Cost)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(x => x[i].OpeningAdjustedTaxValue)
                </td>
                <td>
                    <span class="dollarSign">$</span>
                    @Html.TextBoxFor(x => x[i].OpeningAdjustedTaxValue)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(x => x[i].RatePercentage)
                </td>
                <td>
                    @Html.TextBoxFor(x => x[i].RatePercentage)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(x => x[i].DepreciationMethond)
                </td>
                <td>
                    @Html.TextBoxFor(x => x[i].DepreciationMethond)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(x => x[i].DepreciationClaimed)
                </td>
                <td>
                    <span class="dollarSign">$</span>
                    @Html.TextBoxFor(x => x[i].DepreciationClaimed)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(x => x[i].CloseingAdjustedTaxValue)
                </td>
                <td>
                    <span class="dollarSign">$</span>
                    @Html.TextBoxFor(x => x[i].CloseingAdjustedTaxValue)
                </td>
            </tr>
        </table>
    }
</div>
