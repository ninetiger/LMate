@using System.Activities
@using BusinessObjects
@using DataObjects
@using Microsoft.AspNet.Identity
@model BusinessObjects.Receipt

@{
    ViewBag.Title = "Edit" + @Model.Description;
    Layout = "~/Views/Shared/_LandlordLayout.cshtml";
}

@{
    var listQuery = DataAccess.ReceiptTypeDao.GetReceiptTypesByUser(User.Identity.GetUserId());
    var receiptTypeList = listQuery.Select(x => new SelectListItem()
    {
        Selected = false,
        Text = x.Type,
        Value = x.Id.ToString()
    }).ToList();
}

<div class="page-header">
    <h2>Edit Receipt @Model.Description</h2>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Edit Receipt</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Receipts", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.LabelFor(x => x.Description)
            @Html.TextBoxFor(x => x.Description)

            @Html.LabelFor(x => x.PurchaseDate)
            @Html.TextBoxFor(x => x.PurchaseDate)

            @Html.LabelFor(x => x.Price)
            @Html.TextBoxFor(x => x.Price)

            @Html.LabelFor(x => x.Vendor)
            @Html.TextBoxFor(x => x.Vendor)

            @Html.LabelFor(x => x.GstRate)
            @Html.TextBoxFor(x => x.GstRate)

            @Html.LabelFor(x => x.IsBulk)
            @Html.TextBoxFor(x => x.IsBulk)

            @Html.LabelFor(x => x.Note)
            @Html.TextBoxFor(x => x.Note)

            @Html.LabelFor(x => x.ReceiptTypeId)
            @Html.DropDownListFor(x => x.ReceiptTypeId, receiptTypeList, string.Empty)

            <div class="editor-label">Image</div>
            <div class="editor-field">
                @if (Model.ImageData == null)
                {
                    @:None
                }
                else
                {
                    <img width="100%" height="100%"
                         src="@Url.Action("GetImage", "Receipts", new { Model.Id })" />
                }
                <div>Upload new receipt image: <input type="file" name="Image" /></div>
            </div>

            <input type="submit" value="Save" />
            @Html.ActionLink("Cancel and return to List", "Index")
        }
    </div>
</div>