@model WebUI.Models.ReceiptEditViewModel

@{
    var receipt = @Model.Receipt;
}

@{
    ViewBag.Title = "Edit" + @Model.Receipt.Description;
    Layout = "~/Views/Shared/_LandlordLayout.cshtml";
}

<div class="page-header">
    <h2>Edit Receipt @Model.Receipt.Description</h2>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Edit Receipt</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "Receipts", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.LabelFor(x => x.Receipt.Description)
            @Html.TextBoxFor(x => x.Receipt.Description)

            @Html.LabelFor(x => x.Receipt.PurchaseDate)
            @Html.TextBoxFor(x => x.Receipt.PurchaseDate)

            @Html.LabelFor(x => x.Receipt.Price)
            @Html.TextBoxFor(x => x.Receipt.Price)

            @Html.LabelFor(x => x.Receipt.Vendor)
            @Html.TextBoxFor(x => x.Receipt.Vendor)

            @Html.LabelFor(x => x.Receipt.GstRate)
            @Html.TextBoxFor(x => x.Receipt.GstRate)

            @Html.LabelFor(x => x.Receipt.IsBulk)
            @Html.TextBoxFor(x => x.Receipt.IsBulk)

            @Html.LabelFor(x => x.Receipt.Note)
            @Html.TextBoxFor(x => x.Receipt.Note)

            @Html.LabelFor(x => x.Receipt.ReceiptTypeId)
            @Html.DropDownListFor(x => x.Receipt.ReceiptTypeId, Model.ReceiptTypeSelectList, string.Empty)

            <div class="editor-label">Image</div>
            <div class="editor-field">
                @if (receipt.ImageData == null)
                {
                    @:None
                }
                else
                {
                    <img width="100%" height="100%"
                         src="@Url.Action("GetImage", "Receipts", new { receipt.Id })" />
                }
                <div>Upload new receipt image: <input type="file" name="Image" /></div>
            </div>

            <input type="submit" value="Save" />
            @Html.ActionLink("Cancel and return to List", "Index")
        }
    </div>
</div>